<% for i in 1..@codeCount %>
	<%if @codes.at(i).to_s != ''%>

		<% 
			barcode_value = @codes.at(i).to_s
			img = Product.getImg barcode_value 
		%>

		</br>
		<strong>Descripción:</strong>
		<%= @description.at(i) %>
		</br>
		<strong>Código:</strong>
		<%= barcode_value %>
		</br>
		<strong>Código de Barras:</strong>
		<%= image_tag "data:image/png;base64," + img %>
		</br>

	<% end %>

<% end %>

