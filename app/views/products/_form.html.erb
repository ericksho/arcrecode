<%= form_for(@product, :html => {:autocomplete => "off"}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>País</th>
        <th>Empresa</th>
        <th>Producto</th>
        <th>Digito Verificador</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= f.number_field :country, :value => '780', :disabled => true %></td>
        <td><%= f.select :enterprise, [["Dais",0001],["Arcre",0002],["Armand",0003]]%></td>
        <td><%= f.number_field :product, :min => 0, :max => 9999, :value => 02%></td>
        <td><%= f.text_field :verifyDigit, :value => '?', :disabled => true%></td>
      </tr>
    </tbody>
  </table>

  <% p = Product.new() %>
  <%= p.getVerifyDigit%>


  <div class="field">
    <%= f.label "descripción" %>
    <%= f.text_field :description,:required => true, :placeholder => 'p.e. Destornillador de punta Sodimac' %>
  </div>
  <div class="actions">
    <%= f.submit "Crear Producto"%>
  </div>
<% end %>


<%= javascript_tag "var autocomplete_items = #{ @autocomplete_codes.to_json };" %>

<script type="text/javascript">
    jQuery(document).ready(function() {
        $('#auto_complete').typeahead({source: autocomplete_items});
    });
</script>